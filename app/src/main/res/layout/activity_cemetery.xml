<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Cemetery">

    <ImageView
            android:layout_width="330dp"
            android:layout_height="305dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="88dp" android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="NOT SUPRISED"
            android:layout_width="158dp"
            android:layout_height="67dp"
            android:id="@+id/textView" android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="124dp" android:layout_marginRight="124dp" android:textSize="24sp"
            android:autoText="false" android:capitalize="characters"/>
</androidx.constraintlayout.widget.ConstraintLayout>